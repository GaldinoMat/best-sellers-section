{{
  product.featured_media
  | image_url: width: 3200
  | image_tag:
    loading: 'lazy',
    widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
    class: first_media_class
}}
{% if second_media != blank %}
  {% if second_media.media_type == 'image' %}
    {{
      second_media
      | image_url: width: 3200
      | image_tag:
        loading: 'lazy',
        widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
        class: 'tw-absolute tw-top-0 tw-opacity-0 group-hover:tw-opacity-100 product-image tw-z-[9]'
    }}
  {% elsif second_media.media_type == 'external_video' %}
    {{
      second_media
      | external_video_url: autoplay: true
      | external_video_tag: class: 'product-video', loading: 'lazy'
    }}
  {% endif %}
{% endif %}
